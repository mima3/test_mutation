{
  "$schema": "https://stryker-mutator.io/schema/stryker-schema.json",
  "testRunner": "jest",
  "mutate": [
    "src/**/*.js",
    "!src/**/__tests__/**/*.js",
    "!src/**/*.spec.js",
    "!src/**/*.test.js"
  ],
  "coverageAnalysis": "perTest",
  "concurrency": 4,
  "reporters": ["html", "clear-text", "progress"],
  "thresholds": { "high": 80, "low": 60, "break": 50 },

  "jest": {
    "projectType": "custom",
    "configFile": "jest.config.js"
  }
}
